<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dashboard_header"
    android:orientation="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/colorPrimary"
            app:subtitleTextAppearance="@style/ToolbarSubtitleAppearance"
            app:title="Create Order"
            app:titleTextAppearance="@style/ToolbarTitle" />

        <ListView
            android:id="@+id/listContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="56dp"
            android:background="#ffffff"
            android:clipToPadding="false"
            android:divider="#ffffff"
            android:visibility="gone" />

        <android.support.v7.widget.CardView
            android:id="@+id/card_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:visibility="invisible"
            card_view:cardBackgroundColor="@color/white"
            card_view:cardCornerRadius="2dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/linearLayout_search"
                    android:layout_width="match_parent"
                    android:layout_height="48dp">

                    <ImageView
                        android:id="@+id/image_search_back"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:padding="12dp"
                        android:src="@drawable/ic_arrow_back" />

                    <EditText
                        android:id="@+id/edit_text_search"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:gravity="center_vertical"
                        android:hint="Search"
                        android:imeOptions="actionSearch"
                        android:inputType="textCapWords"
                        android:paddingLeft="12dp"
                        android:paddingRight="8dp"
                        android:singleLine="true" />

                    <ImageView
                        android:id="@+id/clearSearch"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:padding="12dp"
                        android:src="@drawable/ic_close" />

                </LinearLayout>

                <View
                    android:id="@+id/line_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/linearLayout_search"
                    android:background="#eee" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nested"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="fill_vertical"
        android:layout_marginTop="56dp"
        android:background="@color/dashboard_header"
        android:fillViewport="true"
        android:visibility="visible"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:id="@+id/main_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:elevation="1dp"
                app:cardCornerRadius="2dp"
                app:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/text_input"
                        android:visibility="gone"
                        app:hintTextAppearance="@style/TextLabel">

                        <EditText
                            android:id="@+id/date_edt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:hint="Request Date"
                            android:imeOptions="actionNext"
                            android:maxLines="1"
                            android:textSize="@dimen/contact_txt_size" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/text_input"
                        app:hintTextAppearance="@style/TextLabel">

                        <AutoCompleteTextView
                            android:id="@+id/customer_name_edt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Select From Contact Book "
                            android:imeOptions="actionNext"
                            android:maxLines="1"
                            android:textSize="@dimen/contact_txt_size" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/text_input"
                        app:hintTextAppearance="@style/TextLabel">

                        <AutoCompleteTextView
                            android:id="@+id/customer_email_edt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Email"
                            android:imeOptions="actionNext"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:textSize="@dimen/contact_txt_size" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/text_input"
                        app:hintTextAppearance="@style/TextLabel">

                        <AutoCompleteTextView
                            android:id="@+id/customer_mobile_edt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Mobile"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:maxLines="1"
                            android:textSize="@dimen/contact_txt_size" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/text_input"
                        android:visibility="gone"
                        app:hintTextAppearance="@style/TextLabel">

                        <AutoCompleteTextView
                            android:id="@+id/customer_alter_mobile_edt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Alternative Mobile"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:maxLines="1"
                            android:textSize="@dimen/contact_txt_size" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/text_input"
                        app:hintTextAppearance="@style/TextLabel">

                        <AutoCompleteTextView
                            android:id="@+id/customer_address1_edt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:hint="Address"
                            android:imeOptions="actionNext"
                            android:inputType="textMultiLine"
                            android:maxLines="5"
                            android:minLines="1"
                            android:textSize="@dimen/contact_txt_size" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/text_input"
                        android:visibility="gone"
                        app:hintTextAppearance="@style/TextLabel">

                        <AutoCompleteTextView
                            android:id="@+id/customer_address2_edt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Address Line 2"
                            android:imeOptions="actionNext"
                            android:maxLines="5"
                            android:textSize="@dimen/contact_txt_size" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/text_input"
                        android:visibility="gone"
                        app:hintTextAppearance="@style/TextLabel">

                        <AutoCompleteTextView
                            android:id="@+id/customer_landmark_edt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:hint="Landmark"
                            android:imeOptions="actionNext"
                            android:maxLines="1"
                            android:textSize="@dimen/contact_txt_size" />

                    </android.support.design.widget.TextInputLayout>

                    <!-- todo area-->
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/text_input"
                        app:hintTextAppearance="@style/TextLabel">

                        <AutoCompleteTextView
                            android:id="@+id/customer_area_edt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Area"
                            android:imeOptions="actionNext"
                            android:maxLines="1"
                            android:textSize="@dimen/contact_txt_size" />

                    </android.support.design.widget.TextInputLayout>

                    <!-- todo city-->
                    <fr.ganfra.materialspinner.MaterialSpinner
                        android:id="@+id/city_spinner"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_input" />

                    <!-- todo district-->
                    <fr.ganfra.materialspinner.MaterialSpinner
                        android:id="@+id/district_spinner"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_input"
                        android:visibility="gone" />

                    <!-- todo Zone-->
                    <fr.ganfra.materialspinner.MaterialSpinner
                        android:id="@+id/zone_spinner"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_input" />

                    <!-- todo state -->
                    <fr.ganfra.materialspinner.MaterialSpinner
                        android:id="@+id/state_spinner"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_input" />

                    <!-- todo country -->
                    <fr.ganfra.materialspinner.MaterialSpinner
                        android:id="@+id/country_spinner"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_input" />

                    <!-- todo pin-->
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/text_input"
                        app:hintTextAppearance="@style/TextLabel">

                        <AutoCompleteTextView
                            android:id="@+id/customer_pincode_edt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Pincode"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:maxLines="1"
                            android:textSize="@dimen/contact_txt_size" />

                    </android.support.design.widget.TextInputLayout>

                    <!-- todo gst -->
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/text_input"
                        app:hintTextAppearance="@style/TextLabel">

                        <AutoCompleteTextView
                            android:id="@+id/customer_gst_edt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="GST Number"
                            android:imeOptions="actionNext"
                            android:maxLines="1"
                            android:textSize="@dimen/contact_txt_size" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/text_input"
                        app:hintTextAppearance="@style/TextLabel">

                        <AutoCompleteTextView
                            android:id="@+id/customer_pancard_edt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="PAN No"
                            android:imeOptions="actionNext"
                            android:maxLines="1"
                            android:textSize="@dimen/contact_txt_size" />

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:elevation="1dp"
                app:cardCornerRadius="2dp"
                app:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <LinearLayout
                        android:id="@+id/pending_quotation_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Select Dealer"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <fr.ganfra.materialspinner.MaterialSpinner
                            android:id="@+id/dealer_spinner"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="@dimen/text_input" />

                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Search Serial No"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/text_input"
                        android:layout_marginTop="@dimen/text_input"
                        app:hintTextAppearance="@style/TextLabel">

                        <AutoCompleteTextView
                            android:id="@+id/search_item_edt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Search Serial No"
                            android:imeOptions="actionNext"
                            android:maxLines="1"
                            android:textSize="@dimen/contact_txt_size" />

                    </android.support.design.widget.TextInputLayout>


                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:elevation="1dp"
                app:cardCornerRadius="2dp"
                app:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/text_input"
                        app:hintTextAppearance="@style/TextLabel">

                        <EditText
                            android:id="@+id/serial_no_edt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Serial No"
                            android:imeOptions="actionNext"
                            android:maxLines="1"
                            android:textSize="@dimen/contact_txt_size" />

                    </android.support.design.widget.TextInputLayout>

                    <fr.ganfra.materialspinner.MaterialSpinner
                        android:id="@+id/item_name_spinner"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_input" />

                    <fr.ganfra.materialspinner.MaterialSpinner
                        android:id="@+id/model_spinner"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_input" />

                    <fr.ganfra.materialspinner.MaterialSpinner
                        android:id="@+id/color_spinner"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_input" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/text_input"
                        app:hintTextAppearance="@style/TextLabel">

                        <EditText
                            android:id="@+id/purchase_date_edt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Purchase Date"
                            android:focusableInTouchMode="false"
                            android:focusable="false"
                            android:clickable="false"
                            android:cursorVisible="false"
                            android:maxLines="1"
                            android:textSize="@dimen/contact_txt_size" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/text_input"
                        app:hintTextAppearance="@style/TextLabel">

                        <EditText
                            android:id="@+id/part_guarantee_edt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Part Guarantee"
                            android:singleLine="true"
                            android:imeOptions="actionNext"
                            android:maxLines="1"
                            android:textSize="@dimen/contact_txt_size" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/text_input"
                        app:hintTextAppearance="@style/TextLabel">

                        <EditText
                            android:id="@+id/full_body_guarantee_edt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Full Body Guarantee"
                            android:singleLine="true"
                            android:imeOptions="actionDone"
                            android:maxLines="1"
                            android:textSize="@dimen/contact_txt_size" />

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:stretchColumns="1">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimary"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="@dimen/_150sdp"
                                android:layout_height="fill_parent"
                                android:gravity="center"
                                android:paddingBottom="10dp"
                                android:paddingTop="10dp"
                                android:text="PRODUCT"
                                android:textAllCaps="true"
                                android:textColor="@color/white"
                                android:textSize="14dp" />

                            <TextView
                                android:layout_width="1dp"
                                android:layout_height="fill_parent"
                                android:background="@color/white"
                                android:visibility="visible" />

                            <TextView
                                android:layout_width="@dimen/_100sdp"
                                android:layout_height="fill_parent"
                                android:gravity="center"
                                android:paddingBottom="8dp"
                                android:paddingTop="8dp"
                                android:text="BRAND"
                                android:textColor="@color/white"
                                android:visibility="visible" />

                            <TextView
                                android:layout_width="1dp"
                                android:layout_height="fill_parent"
                                android:background="@color/white" />

                            <TextView
                                android:layout_width="@dimen/_100sdp"
                                android:layout_height="fill_parent"
                                android:gravity="center"
                                android:text="MODEL"
                                android:textColor="@color/white" />

                            <TextView
                                android:layout_width="1dp"
                                android:layout_height="fill_parent"
                                android:background="@color/white"
                                android:visibility="visible" />

                            <TextView
                                android:layout_width="@dimen/_100sdp"
                                android:layout_height="fill_parent"
                                android:gravity="center"
                                android:text="COLOR"
                                android:textColor="@color/white"
                                android:visibility="visible" />

                            <TextView
                                android:layout_width="1dp"
                                android:layout_height="fill_parent"
                                android:background="@color/white"
                                android:visibility="visible" />

                            <TextView
                                android:layout_width="@dimen/_100sdp"
                                android:layout_height="fill_parent"
                                android:gravity="center"
                                android:text="SERIAL NO"
                                android:textColor="@color/white"
                                android:visibility="visible" />

                            <TextView
                                android:layout_width="1dp"
                                android:layout_height="fill_parent"
                                android:background="@color/white"
                                android:visibility="visible" />

                            <TextView
                                android:layout_width="@dimen/_100sdp"
                                android:layout_height="fill_parent"
                                android:gravity="center"
                                android:text="PURCHASE DATE"
                                android:textColor="@color/white"
                                android:visibility="visible" />

                            <TextView
                                android:layout_width="1dp"
                                android:layout_height="fill_parent"
                                android:background="@color/white"
                                android:visibility="visible" />

                            <TextView
                                android:layout_width="@dimen/_100sdp"
                                android:layout_height="fill_parent"
                                android:gravity="center"
                                android:text="QTY"
                                android:textColor="@color/white"
                                android:visibility="visible" />

                            <TextView
                                android:layout_width="1dp"
                                android:layout_height="fill_parent"
                                android:background="@color/white"
                                android:visibility="visible" />

                            <TextView
                                android:layout_width="@dimen/_80sdp"
                                android:layout_height="fill_parent"
                                android:gravity="center"
                                android:text="Delete"
                                android:textColor="@color/white"
                                android:visibility="visible" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <View
                        android:id="@+id/toolbar_shadow"
                        android:layout_width="match_parent"
                        android:layout_height="4dp" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycleview"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"></android.support.v7.widget.RecyclerView>

                </LinearLayout>

            </HorizontalScrollView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:elevation="1dp"
                app:cardCornerRadius="2dp"
                app:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/text_input"
                        app:hintTextAppearance="@style/TextLabel">

                        <EditText
                            android:id="@+id/terms_edt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/problem"
                            android:inputType="textImeMultiLine"
                            android:maxLines="8"
                            android:minLines="1"
                            android:textSize="@dimen/contact_txt_size" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/text_input"
                        android:layout_marginTop="@dimen/text_input"
                        app:hintTextAppearance="@style/TextLabel">

                        <EditText
                            android:id="@+id/narration_edt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/narration"
                            android:inputType="textImeMultiLine"
                            android:maxLines="8"
                            android:minLines="1"
                            android:textSize="@dimen/contact_txt_size" />

                    </android.support.design.widget.TextInputLayout>

                    <!-- todo task priority -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Priority"
                            android:textSize="16dp" />

                        <RatingBar
                            android:id="@+id/ratingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:numStars="3"
                            android:rating="1"
                            android:stepSize="1.0"
                            android:theme="@style/CustomRatingBar" />

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/submit"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:text="Create Order"
                        android:textColor="@color/white" />

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>
