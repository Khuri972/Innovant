<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="#81A27D"
        android:orientation="vertical">

        <TextView
            android:id="@+id/igst_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="3dp"
            android:textColor="#000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/cgst_igst_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="3dp"
            android:textColor="#000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="end|bottom"
            android:padding="10dp"
            android:text="0"
            android:textColor="#000"
            android:textSize="35sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/three_gst_plus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/cal_background"
            android:text="3%"
            android:textColor="#fff"
            android:textSize="28sp" />

        <Button
            android:id="@+id/five_gst_plus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/cal_background"
            android:text="5%"
            android:textColor="#fff"
            android:textSize="28sp" />

        <Button
            android:id="@+id/twelve_gst_plus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/cal_background"
            android:text="12%"
            android:textColor="#fff"
            android:textSize="28sp" />

        <Button
            android:id="@+id/eighteen_gst_plus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/cal_background"
            android:text="18%"
            android:textColor="#fff"
            android:textSize="28sp" />

        <Button
            android:id="@+id/twentyEight_gst_plus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/cal_background"
            android:text="28%"
            android:textColor="#fff"
            android:textSize="28sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/three_gst_minus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/cal_background"
            android:text="-3%"
            android:textColor="#fff"
            android:textSize="28sp" />

        <Button
            android:id="@+id/five_gst_minus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/cal_background"
            android:text="-5%"
            android:textColor="#fff"
            android:textSize="28sp" />

        <Button
            android:id="@+id/twelve_gst_minus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/cal_background"
            android:text="-12%"
            android:textColor="#fff"
            android:textSize="28sp" />

        <Button
            android:id="@+id/eighteen_gst_minus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/cal_background"
            android:text="-18%"
            android:textColor="#fff"
            android:textSize="28sp" />

        <Button
            android:id="@+id/twentyEight_gst_minus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/cal_background"
            android:text="-28%"
            android:textColor="#fff"
            android:textSize="28sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/cal_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/button1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/cal_background"
                    android:text="1"
                    android:textColor="#fff"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/cal_background"
                    android:text="2"
                    android:textColor="#fff"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/cal_background"
                    android:text="3"
                    android:textColor="#fff"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/pluse"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/cal_background"
                    android:text="+"
                    android:textColor="#fff"
                    android:textSize="30sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/button4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/cal_background"
                    android:text="4"
                    android:textColor="#fff"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/cal_background"
                    android:text="5"
                    android:textColor="#fff"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/button6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/cal_background"
                    android:text="6"
                    android:textColor="#fff"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/minuse"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/cal_background"
                    android:text="-"
                    android:textColor="#fff"
                    android:textSize="30sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/button7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/cal_background"
                    android:text="7"
                    android:textColor="#fff"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/button8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/cal_background"
                    android:text="8"
                    android:textColor="#fff"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/button9"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/cal_background"
                    android:text="9"
                    android:textColor="#fff"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/multiplaction"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/cal_background"
                    android:text="*"
                    android:textColor="#fff"
                    android:textSize="30sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="4">

                <Button
                    android:id="@+id/button0"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@color/cal_background"
                    android:text="0"
                    android:textColor="#fff"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/button_point"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/cal_background"
                    android:text="."
                    android:textColor="#fff"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/division"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/cal_background"
                    android:text="÷"
                    android:textColor="#fff"
                    android:textSize="30sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical">

            <Button
                android:id="@+id/del"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:background="@color/cal_background"
                android:text="X"
                android:textColor="#fff"
                android:textSize="30sp" />

            <Button
                android:id="@+id/clear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:background="@color/cal_background"
                android:text="C"
                android:textColor="#fff"
                android:textSize="30sp" />

            <Button
                android:id="@+id/_equles"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/cal_background"
                android:text="="
                android:textColor="@color/white"
                android:textSize="30sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
