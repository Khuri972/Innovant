<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="visible">

        <View
            android:id="@+id/list_product_selection_view"
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/text_color" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@color/text_color" />

            <TextView
                android:id="@+id/sales_product_desc"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:text="FREEDOM FLOURMILL REAL DIAMOND SILVER GRAY"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@color/text_color" />

            <TextView
                android:id="@+id/sales_product_hsn"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:text="FREEDOM FLOURMILL REAL DIAMOND SILVER GRAY"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@color/text_color" />

            <TextView
                android:id="@+id/sales_product_unit"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:text="UNIT"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@color/text_color" />

            <EditText
                android:id="@+id/sales_product_qty"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="wrap_content"
                android:gravity="center|right"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="5"
                android:textColor="@color/text_color"
                android:textSize="14dp" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@color/text_color" />

            <EditText
                android:id="@+id/sales_product_price"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:gravity="center|right"
                android:imeOptions="actionNext"
                android:inputType="numberDecimal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="5"
                android:textColor="@color/text_color"
                android:textSize="14dp" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@color/text_color" />

            <EditText
                android:id="@+id/sales_product_disctount"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="wrap_content"
                android:gravity="center|right"
                android:imeOptions="actionNext"
                android:inputType="numberDecimal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="5"
                android:textColor="@color/text_color"
                android:textSize="14dp" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@color/text_color" />

            <TextView
                android:id="@+id/sales_product_amnt"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:gravity="center|right"
                android:paddingRight="5dp"
                android:paddingBottom="10dp"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:text="3151.5"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@color/text_color" />

            <TextView
                android:id="@+id/sales_product_gst"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="wrap_content"
                android:gravity="center|right"
                android:paddingRight="5dp"
                android:paddingBottom="10dp"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:text="18"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@color/text_color" />

            <TextView
                android:id="@+id/sales_product_cgst"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="wrap_content"
                android:gravity="center|right"
                android:paddingRight="5dp"
                android:paddingBottom="10dp"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:text="18"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@color/text_color" />

            <TextView
                android:id="@+id/sales_product_sgst"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="wrap_content"
                android:gravity="center|right"
                android:paddingRight="5dp"
                android:paddingBottom="10dp"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:text="18"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@color/text_color" />

            <TextView
                android:id="@+id/sales_product_igst"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="wrap_content"
                android:gravity="center|right"
                android:paddingRight="5dp"
                android:paddingBottom="10dp"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:text="18"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@color/text_color" />

            <TextView
                android:id="@+id/sales_product_nat_amt"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:gravity="center|right"
                android:paddingRight="5dp"
                android:paddingBottom="10dp"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:text="18"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@color/text_color" />

            <LinearLayout
                android:layout_width="@dimen/_80sdp"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:id="@+id/sales_product_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_delete_black_24dp" />

            </LinearLayout>

            <TextView
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@color/text_color" />

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/text_color" />

    </LinearLayout>

</LinearLayout>